---
interface Props {
  image: string;
  title: string;
  category?: string;
  description?: string;
  price?: string; // precio opcional
  id: string;
}

const { id, image, title, category, description, price } = Astro.props;
---

<div
  class="bg-white h-full shadow-md border border-gray-200 rounded-xl overflow-hidden hover:shadow-xl transition-all duration-300 cursor-pointer"
>
  <a href=`/productos/${id}`>
    <div class="relative bg-gray-50">
      <img src={image} alt={title} class="w-full h-56 object-contain p-4" />

      {
        category && (
          <span class="absolute top-2 left-2 bg-blue-600 text-white text-xs font-semibold px-2 py-1 rounded">
            {category}
          </span>
        )
      }
    </div>

    <div class="p-4 flex flex-col h-full">
      <h3 class="text-lg font-bold text-gray-900">{title}</h3>

      {
        description && (
          <p class="mt-1 text-sm text-gray-600 line-clamp-3">{description}</p>
        )
      }

      {/* Características dinámicas */}
      <div class="mt-3 text-sm text-gray-700 space-y-1">
        <slot name="features" />
      </div>

      {/* Precio */}
      {
        price && (
          <div class="mt-4">
            <span class="text-lg font-semibold text-blue-600">{price}</span>
          </div>
        )
      }
    </div>
  </a>
</div>
