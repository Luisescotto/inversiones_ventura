---
import { Icon } from "astro-icon/components";
const iconSize = 18;

interface Props {
  image: string;
  title: string;
}

const { image, title } = Astro.props;
---

<article
  class="bg-gradient-to-b from-green-200 to-lime-400/60 rounded-2xl overflow-hidden shadow-lg flex flex-col h-[450px] relative"
>
  <!-- Imagen -->
  <div class="h-full w-full overflow-hidden">
    <img
      src={image}
      alt={title}
      class="h-full w-full object-contain object-center"
      loading="lazy"
    />
  </div>

  <!-- Contenido -->
  <div class="flex-1 p-4 relative">
    <h2 class="text-lg font-semibold mb-2 text-gray-800 truncate">{title}</h2>
    <div
      class="text-sm font-medium text-gray-700 leading-relaxed line-clamp-3 w-[75%]"
    >
      <slot />
    </div>

    <!-- Botón "Ver más" -->
    <a
      href="#"
      class="flex justify-center items-center rounded-lg absolute bottom-3 right-3 px-4 py-2 text-gray-700 text-sm font-bold hover:bg-white/40 transition-colors duration-700"
    >
      Ver más
      <div
        class="flex justify-center items-center rounded-full bg-white p-2 ml-2 text-gray-800"
      >
        <Icon name="fullArrowRight" size={iconSize} />
      </div>
    </a>
  </div>
</article>
