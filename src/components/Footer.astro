---
import Socials from "./Socials.astro";
import { Icon } from "astro-icon/components";
const iconSize = 25;
---

<footer class="bg-slate-900 w-full text-white border-t border-slate-800">
  <div class="px-4 py-10 max-w-6xl mx-auto grid md:grid-cols-3 gap-8">
    <!-- Columna 1: Ubicación -->
    <div>
      <h2 class="text-xl font-bold mb-3">Ubicación</h2>

      <div class="flex items-start gap-3 mb-3">
        <Icon name="location" size={35} class="text-main" />
        <div>
          <p class="text-sm leading-tight">
            Calle Concepción Taveras<br />
            La Vega, República Dominicana
          </p>
        </div>
      </div>

      <div class="flex items-center gap-3">
        <Icon name="phoneCall" size={30} class="text-main" />
        <p class="text-sm">
          Llámanos al:
          <span class="text-main font-semibold">809-123-4567</span>
        </p>
      </div>
    </div>

    <!-- Columna 2: Enlaces rápidos -->
    <div class="md:pl-6">
      <h2 class="text-xl font-bold mb-3">Enlaces útiles</h2>
      <ul class="space-y-2 text-sm text-gray-300">
        <li>
          <a href="/" class="hover:text-main transition-colors duration-200"
            >Inicio</a
          >
        </li>
        <li>
          <a
            href="/productos"
            class="hover:text-main transition-colors duration-200">Productos</a
          >
        </li>
        <li>
          <a
            href="/ofertas"
            class="hover:text-main transition-colors duration-200">Ofertas</a
          >
        </li>
        <li>
          <a
            href="/contacto"
            class="hover:text-main transition-colors duration-200">Contacto</a
          >
        </li>
        <li>
          <a
            href="/sobre-nosotros"
            class="hover:text-main transition-colors duration-200"
            >Sobre nosotros</a
          >
        </li>
      </ul>
    </div>

    <!-- Columna 3: Redes sociales -->
    <div class="flex flex-col items-start md:items-end justify-between">
      <div class="mb-4 md:mb-0">
        <h2 class="text-xl font-bold mb-3">Síguenos</h2>
        <Socials class="flex gap-3" iconSize={iconSize} />
      </div>
    </div>
  </div>

  <!-- Línea inferior -->
  <div
    class="border-t border-slate-800/50 mt-6 py-4 text-center text-sm text-gray-400"
  >
    <p>
      © {new Date().getFullYear()} Inversiones Ventura S.R.L. Todos los derechos
      reservados.
    </p>
  </div>
</footer>
